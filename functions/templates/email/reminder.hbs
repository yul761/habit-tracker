{{!-- templates/reminder.hbs --}}
{{#> layouts/default}}
<div class="email-container">
  <div class="header">
    <div class="time-indicator">
      {{#timeOfDay}}
        {{#if isMorning}}🌅{{else if isEvening}}🌙{{else}}☀️{{/if}}
      {{/timeOfDay}}
    </div>
    <h1>Habit Hub Check-in</h1>
  </div>

  <div class="content">
    <h2>Hello {{userName}}! 👋</h2>

    {{> components/progress-circle streak=streak}}
    
    {{> components/habit-card 
      habitName=habitName 
      lastSevenDays=lastSevenDays
    }}

    {{> components/stats-grid 
      completionRate=completionRate 
      daysCompleted=daysCompleted 
      bestStreak=bestStreak
    }}

    {{> components/quote-box 
      quote=motivationalQuote 
      author=quoteAuthor
    }}

    {{> components/action-buttons 
      actionUrl=actionUrl 
    }}

    {{> components/social-share 
      twitterUrl=twitterShareUrl
      facebookUrl=facebookShareUrl
      linkedinUrl=linkedinShareUrl
    }}

    {{> components/footer logoUrl=logoUrl}}
  </div>
</div>
{{/layouts/default}}